@page
@model WorkOrdersIndexModel
@{
    ViewData["Title"] = "Work Orders";
}
<h1 class="mb-3">Work Orders</h1>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert alert-success" role="alert">@Model.Message</div>
}

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info">No work orders yet. Click <strong>Create New</strong> to add one.</div>
}
else
{
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Dept</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Requested By</th>
            <th>Updated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var w in Model.Items)
    {
        <tr>
            <td>@w.Title</td>
            <td>@w.Department</td>
            <td>@w.Priority</td>
            <td>
                <span class="badge text-bg-@(w.Status == WorkOrderStatus.New ? "secondary" : w.Status == WorkOrderStatus.InProgress ? "warning" : "success")">
                    @w.Status
                </span>
            </td>
            <td>@w.RequestedBy</td>
            <td>@w.UpdatedAt.ToLocalTime().ToString("g")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-page="Details" asp-route-id="@w.Id">Details</a>
                <a class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@w.Id">Edit</a>
                <a class="btn btn-sm btn-outline-danger" asp-page="Delete" asp-route-id="@w.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
}